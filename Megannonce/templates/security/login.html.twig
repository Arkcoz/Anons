{% extends 'base.html.twig' %}

{% block title %}Anons - Connexion{% endblock %}

{% block stylesheets %}
    <link href="css/button.css" rel="stylesheet"/>
    <link href="css/login.css" rel="stylesheet"/>
    <link href="css/password.css" rel="stylesheet"/>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
{% endblock %}

{% block body %}
    
    <h1>{{title}}</h1>
    <div class="formulaire">
        <form action="{{path('security_login')}}" method="post">
            <div class="label">
                Email
            </div>
            <div>
                <input placeholder="Addresse email ..." required name="_username" type="text" class="form-control" autocomplete="off"> 
            </div>

            <div class="label">
                Mot de passe
            </div>
            <div class="passwordField">
                <input id="registration_password" placeholder="Mot de passe ..." required name="_password" type="password" class="form-control" autocomplete="off"> 
                <i class="bi bi-eye-slash" id="togglePassword"></i>
            </div>
            <div class="buttons-box">
                <div class="div_test">
                    <div class="row">
                        <button type="submit" class="btn btn-success">Se connecter </button>
                    </div>
                    <div class="row content">
                        OU
                    </div>
                    <div class="div-global creer-compte">
                        <a class="btn-icon" href="{{ path ('security_registration')}}">
                            <div class="btn-box-icon creer-compte">
                                <div class="btn-content btn-content-simple">
                                    Cr√©er un compte
                                </div> 
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            
        </form>
    </div>

   <script type="text/javascript" src="js/password.js"></script>
{% endblock %}